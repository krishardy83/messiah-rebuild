---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../lib/utils";

interface Props extends HTMLAttributes<"nav"> {
  title?: string;
  links: {
    label: string;
    href: string;
  }[];
}

const { title, links, class: className, ...props } = Astro.props;
---

<nav {...props} class={cn("py-12", className)}>
  {title ? <h3 class="mb-8 font-title text-4xl font-bold text-primary-800">{title}</h3> : null}

  <ul class="flex gap-4 flex-wrap">
    {
      links.map((link) => (
        <li>
          <a class="btn-tertiary" href={link.href}>
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
