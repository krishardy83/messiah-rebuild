</div>

<script>
  class RequestInformationForm extends HTMLElement {
    formId: string = "267f853e-db82-405c-9e27-8ab5c95c4caa";

    connectedCallback() {
      const div = document.createElement("div");
      const script = document.createElement("script");
      const style = document.createElement("style");

      style.textContent = `
        .form_container select,
        .form_container input {
          background-color: white;
          width: 100%;
          height: 40px;
          padding-inline: 12px;
          border: 1px solid #4389b4;
        }

        .form_birthdate .form_responses {
          display: grid;
          gap: 4px;
          grid-template-columns: 3fr 1fr 2fr;
        }
        
        .form_birthdate select {
          margin-left: unset !important;
        }

        .form_button_submit {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          height: 40px;
          padding-inline: 12px;
          text-align: center;
          font-family: priori-sans, ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.05em;
          background-color: #273d5e;
          width: 100%;
          color: white;
        }

        .form_button_submit:hover {
          opacity: 0.75;
        }
      `;

      div.textContent = "Loading...";
      div.id = `form_${this.formId}`;

      script.async = true;
      script.src = `https://mcadmissions.messiah.edu/register/?id=${this.formId}&output=embed&div=form_${this.formId}`;

      this.append(div, script, style);
    }
  }

  customElements.define("request-information-form", RequestInformationForm);
</script>
