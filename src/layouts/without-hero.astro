---
import Breadcrumbs from "../components/breadcrumbs.astro";
import BaseLayout from "./base.astro";

interface Props {
  title: string;
  description: string;
  breadcrumbs: {
    name: string;
    href: string;
  }[];
}

const { title, description, breadcrumbs } = Astro.props;
---

<BaseLayout title={title} description={description} transparent={false}>
  <main id="content">
    <header class="bg-gray-100">
      <h1
        class="px-10 max-w-6xl mx-auto font-serif py-8 text-base uppercase tracking-widest sm:text-lg md:text-2xl text-primary-800"
      >
        {title}
      </h1>
    </header>
  </main>

  <div class="relative mx-auto max-w-6xl px-4">
    <div class="bg-white px-6 py-4">
      <Breadcrumbs links={breadcrumbs} />

      <slot />
    </div>
  </div>
</BaseLayout>
