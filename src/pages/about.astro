---
import ContinueExploring from "../components/continue-exploring.astro";
import SingleColumn from "../layouts/single-column.astro";
import SeeAnew from "../views/about/see-anew.astro";
import PageTabNavigation from "../components/page-tab-navigation.astro";
import WhoWeAre from "../views/about/who-we-are.astro";
import OurCampus from "../views/about/our-campus.astro";
import GetToKnowArea from "../views/about/get-to-know-area.astro";
import FaithCommunity from "../views/about/faith-community.astro";
import History from "../views/about/history.astro";
---

<SingleColumn
  title="About Messiah"
  image="/images/about-hero.jpg"
  subtitle="Sharpening intellect. Deepening Christian faith. Inspiring action."
  description="Sharpening intellect. Deepening Christian faith. Inspiring action."
  analyticsKey="about"
>
  <PageTabNavigation
    tabs={[
      { title: "Our campus", hash: "#our-campus" },
      { title: "Faith community", hash: "#faith-community" },
      { title: "See anew", hash: "#see-anew" },
      { title: "Our history", hash: "#our-history" },
    ]}
  />

  <WhoWeAre />

  <OurCampus />

  <GetToKnowArea />

  <FaithCommunity />

  <SeeAnew />

  <History />

  <ContinueExploring
    title="Continue Exploring"
    class="wrapper"
    links={[
      {
        label: "Accreditation",
        href: "https://www.messiah.edu/info/20012/accreditation",
      },
      { label: "News and events", href: "https://www.messiah.edu/info/20015/news_and_events" },
      {
        label: "University leadership",
        href: "https://www.messiah.edu/info/20016/university_leadership",
      },
      {
        label: "Student consumer info",
        href: "https://www.messiah.edu/info/20000/about/1990/student_consumer_info",
      },
    ]}
  />
</SingleColumn>
