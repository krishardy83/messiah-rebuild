---
import ContinueExploring from "../../components/continue-exploring.astro";
import PageTabNavigation from "../../components/page-tab-navigation.astro";
import SingleColumn from "../../layouts/single-column.astro";
import AcademicPrograms from "../../views/academics/undergraduate/academic-programs.astro";
import PathwayPrograms from "../../views/academics/undergraduate/pathway-programs.astro";
