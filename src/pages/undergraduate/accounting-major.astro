---
import SingleProgram from "../../layouts/single-program.astro";
import Tabs from "../../views/undergraduate/tabs.astro";
import Overview from "../../views/undergraduate/overview.astro";
import Courses from "../../views/undergraduate/courses.astro";
import AlumniOutcomes from "../../views/undergraduate/alumni-outcomes.astro";
import WhyMessiah from "../../views/undergraduate/why-messiah.astro";
import CareerPreparation from "../../views/undergraduate/career-preparation.astro";
import Header from "../../views/undergraduate/header.astro";
import { Program } from "../../components/program-list.astro";
---

<SingleProgram
  title="Accounting"
  image="/images/accounting_hero.jpg"
  mobileImage="/images/accounting-mobile.webp"
  description="Learn about Messiah's Accounting major program"
  badge="B.S."
  programs={[
    Program.Major,
    Program.Minor,
    Program.TeachingCertificate,

  ]}
  analyticsKey="undergraduate/accounting-major"
>
  <Header />

  <Tabs
    tabs={[
      { label: "Overview", id: "overview", Component: Overview },
      { label: "Courses & Curriculum", id: "courses", Component: Courses },
      { label: "Alimni outcomes", id: "alumni-outcomes", Component: AlumniOutcomes },
      { label: "Career preparation", id: "career-preparation", Component: CareerPreparation },
      { label: "Why Messiah?", id: "why-messiah", Component: WhyMessiah },
    ]}
  />
</SingleProgram>
