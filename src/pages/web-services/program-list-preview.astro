---
import ProgramList, { Program } from "../../components/program-list.astro";
import WithoutHero from "../../layouts/without-hero.astro";
---

<WithoutHero
  title="Program List Preview"
  description="Demo page of all program list types"
  sidebarLinks={[
    {
      title: "Web Services",
      children: [
        { href: "/", name: "FAQ's" },
        { href: "/", name: "Project planning" },
        { href: "/", name: "Services provided" },
        { href: "/", name: "Support & training" },
        { href: "/", name: "Website governance" },
      ],
    },
  ]}
  breadcrumbs={[
    { name: "Home", href: "/" },
    { name: "Campus Directory", href: "/" },
    { name: "Offices", href: "/" },
    { name: "Web Services", href: "/" },
    { name: "Content Grey Example", href: "/" },
  ]}
>
  <h2>All UG programs:</h2>
  <ProgramList
    class="bg-gray-400 p-4 flex-col"
    programs={[
      Program.Major,
      Program.Minor,
      Program.Concentration,
      Program.PreHealthAdvising,
      Program.ThreePlusPartnerPrograms,
      Program.TeachingCertificate,
      Program.Accelerated,
      Program.EarlyAssurance,
      Program.UndergraduateCertificate,
    ]}
    showText
  />
  <ProgramList
    class="bg-gray-400 p-4"
    programs={[
      Program.Major,
      Program.Minor,
      Program.Concentration,
      Program.PreHealthAdvising,
      Program.ThreePlusPartnerPrograms,
      Program.TeachingCertificate,
      Program.Accelerated,
      Program.EarlyAssurance,
      Program.UndergraduateCertificate,
    ]}
  />

  <h2>All Grad programs:</h2>
  <ProgramList
    class="bg-gray-400 p-4 flex-col"
    programs={[
      Program.Concentration,
      Program.Track,
      Program.CertificateAdvancedGraduateStudies,
      Program.NonDegree,
      Program.PaTeachingCertification,
      Program.GraduateCertificate
    ]}
    showText
  />

  <ProgramList
    class="bg-gray-400 p-4"
    programs={[
      Program.Concentration,
      Program.Track,
      Program.CertificateAdvancedGraduateStudies,
      Program.NonDegree,
      Program.PaTeachingCertification,
      Program.GraduateCertificate
    ]}
  />

  <h2>Program Format:</h2>
  <ProgramList
    class="bg-gray-400 p-4 flex-col"
    programs={[
      Program.Online,
      Program.Hybrid,
      Program.Campus,

    ]}
    showText
  />

  <ProgramList
    class="bg-gray-400 p-4"
    programs={[
      Program.Online,
      Program.Hybrid,
      Program.Campus,
    ]}
  />

</WithoutHero>
