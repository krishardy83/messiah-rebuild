---
import Accordion from "../../components/accordion.astro";

const accordions = [
  {
    id: "entry-level",
    title:
      "I am a <strong>high school student or an entry-level degree seeker</strong> and would like to be a <strong>licensed physical therapist</strong>",
    icon: "https://www.messiah.edu/site/custom_scripts/styles/img/ico/read.png",
    entries: [
      {
        title: "Early Assurance Program (EAP)",
        content:
          "Students accepted into this program will receive their bachelor's degree from Messiah University and transition to Messiah's School of Graduate Studies to earn their Doctor of Physical Therapy degree.",
        image: {
          src: "https://www.messiah.edu/site/custom_scripts/styles/img/pre-pt-thumbnail.jpg",
          alt: "",
        },
        buttons: [
          {
            label: "Learn more about the Early Assurance Program (EAP)",
            href: "https://www.messiah.edu/undergraduate/physical-therapy-early-assurance-program",
          },
        ],
      },
      {
        title: "Master of Occupational Therapy Pre-physical therapy options",
        content:
          "There are two pre-physical therapy options at Messiah University: 1) Messiah offers a <strong>pre-physical therapy concentration, offered as part of its applied health science major</strong>, to prepare students to apply to a doctor of physical therapy program OR 2) Students may <strong>work with a specialized pre-physical therapy advisor—within a major of their choosing</strong> — to ensure successful completion of both the requirements for their major as well as the requirements for applying to a doctor of physical therapy program.",
        image: {
          src: "https://www.messiah.edu/site/custom_scripts/styles/img/pt-thumbnail.jpg",
          alt: "",
        },
        buttons: [
          {
            label: "Pre-physical therapy concentration",
            href: "https://www.messiah.edu/undergraduate/pre-physical-therapy-concentration",
          },
          {
            label: "Pre-physical therapy advising",
            href: "https://www.messiah.edu/undergraduate/pre-physical-therapy-advising",
          },
        ],
      },
    ],
  },
  {
    id: "bachelors-degree",
    title:
      "I have a <strong>bachelor's degree in a related field</strong> and would like to be a <strong>licensed physical therapist</strong>",
    icon: "https://www.messiah.edu/site/custom_scripts/styles/img/ico/graduated.png",
    entries: [
      {
        title: "Doctor of Physical Therapy",
        content:
          "Messiah University's Doctor of Physical Therapy (DPT) is designed to prepare competent therapists for meaningful careers as practitioners, educators, administrators and consultants in a variety of professional settings including hospitals, clinics, rehabilitation centers, homecare programs, schools and private practices. Our program is a full-time, residential, 110-credit program located in Mechanicsburg, Pennsylvania, 12 miles from the state capital of Harrisburg.",
        image: {
          src: "https://www.messiah.edu/site/custom_scripts/styles/img/dpt-thumbnail.jpg",
          alt: "",
        },
        buttons: [
          {
            label: "Learn more about the Doctor of Physical Therapy",
            href: "https://www.messiah.edu/graduate/doctor-physical-therapy",
          },
        ],
      },
    ],
  },
  {
    id: "academic-research",
    title:
      "I am a <strong>licensed physical therapist</strong> and would like to <strong>pursue a career in academic teaching/research</strong>",
    icon: "https://www.messiah.edu/site/custom_scripts/styles/img/ico/teach2.png",
    entries: [
      {
        title: "Doctor of Science in Physical Therapy",
        content:
          "Messiah University offers a Doctor of Science in physical therapy (DSc in PT) for licensed physical therapists who wish to pursue academic and research opportunities in higher education. The degree is designed for busy adults and can be completed in four to five years while you practice. Students may choose from a degree concentration in academic leadership or orthopaedic manual therapy. Coursework for the program is predominately online.",
        image: {
          src: "https://www.messiah.edu/images/dospt.jpg",
          alt: "",
        },
        buttons: [
          {
            label: "Learn more about the Doctor of of Science in Physical Therapy",
            href: "https://www.messiah.edu/graduate/DSc_PT",
          },
        ],
      },
    ],
  },
  {
    id: "continuing-education",
    title:
      "I am a <strong>licensed physical therapist</strong> seeking <strong>continuing education courses</strong>",
    icon: "https://www.messiah.edu/images/open_book_2.png",
    entries: [
      {
        title: "I am a licensed physical therapist seeking continuing education courses ",
        content:
          "Physical therapy professionals and students can enrich their practice and fulfill continuing education and direct access requirements with life-long learning opportunities at Messiah University. Messiah has partnered with NAIOMT to provide post-professional educational programming that will drive profession growth, cultivate clinical partnerships and enhance clinical practice.",
        image: {
          src: "https://www.messiah.edu/images/arm_exercise.jpg",
          alt: "",
        },
        buttons: [
          {
            label: "NAIOMT COMT courses/certification/residency",
            href: "https://www.messiah.edu/naiomt",
          },
        ],
      },
    ],
  },
];
---

{
  accordions.map((accordion) => (
    <Accordion title={accordion.title} id={accordion.id} image={{ src: accordion.icon }}>
      {accordion.entries.map((entry) => (
        <article class="flex flex-col md:flex-row gap-4 md:gap-8 mb-4 pb-4 border-b border-b-gray-300 last-of-type:border-b-0 last-of-type:mb-0 last-of-type:pb-0">
          <figure class="shrink-0">
            <img
              src={entry.image.src}
              alt={entry.image.alt}
              class="md:max-w-64 w-full sm:w-auto sm:h-full object-cover"
            />
          </figure>

          <div>
            <h4 class="h3">{entry.title}</h4>

            <p class="mb-4" set:html={entry.content} />

            <div class="flex flex-wrap gap-2">
              {entry.buttons.map((button) => (
                <a class="btn-primary" href={button.href}>
                  {button.label}
                </a>
              ))}
            </div>
          </div>
        </article>
      ))}
    </Accordion>
  ))
}
